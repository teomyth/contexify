{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "test": {
      "dependsOn": ["build"],
      "inputs": ["src/**/*.ts", "tests/**/*.ts"]
    },
    "test:coverage": {
      "dependsOn": ["build"],
      "inputs": ["src/**/*.ts", "tests/**/*.ts"]
    },
    "docs:validate": {
      "dependsOn": ["build"],
      "inputs": ["docs-code/**/*.ts", "docs-site/**/*.md"]
    },
    "docs:update": {
      "dependsOn": ["build"],
      "inputs": ["docs-code/**/*.ts"],
      "outputs": ["docs-site/**/*.md"]
    },
    "lint": {
      "outputs": []
    },
    "format": {
      "outputs": []
    },
    "clean": {
      "outputs": []
    }
  }
}
