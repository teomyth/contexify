{
  "name": "contexify-monorepo",
  "private": true,
  "description": "A TypeScript library providing a powerful dependency injection container with context-based IoC capabilities, inspired by LoopBack's Context system.",
  "author": "teomyth <teomyth@gmail.com>",
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@10.8.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/teomyth/contexify.git"
  },
  "homepage": "https://github.com/teomyth/contexify",
  "bugs": {
    "url": "https://github.com/teomyth/contexify/issues"
  },
  "scripts": {
    "clean": "turbo run clean",
    "build": "turbo run build",
    "test": "turbo run test",
    "test:coverage": "turbo run test:coverage --filter=contexify",
    "validate:all": "npm run test && npm run docs:test",
    "lint": "turbo run lint",
    "lint:fix": "biome check --write .",
    "format": "turbo run format",
    "format:fix": "biome format --write .",
    "fix": "biome check --write . && biome format --write .",
    "prepub": "turbo run prepub --filter=contexify",
    "prepub:all": "node scripts/prepub-all.js",
    "prepare": "husky",
    "lint-staged": "lint-staged",
    "docs:test": "turbo run test --filter=docs-code",
    "docs:validate": "turbo run docs:validate",
    "docs:update": "turbo run docs:update",
    "docs:check": "turbo run docs:check --filter=docs-code",
    "docs:build": "turbo run build --filter=docs-site",
    "docs:start": "turbo run start --filter=docs-site",
    "docs:serve": "turbo run serve --filter=docs-site",
    "changeset": "changeset",
    "version": "changeset version && node scripts/update-version.js",
    "release": "changeset publish",
    "release:dry": "changeset publish --dry-run",
    "test:version": "node scripts/test-version-update.js"
  },
  "lint-staged": {
    "packages/contexify/src/**/*.{js,ts}": [
      "biome check --write",
      "biome format --write"
    ],
    "*.json": ["biome format --write"]
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@changesets/cli": "^2.29.2",
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",

    "@types/node": "^22.14.1",
    "@vitest/coverage-v8": "^3.1.1",

    "husky": "^9.1.7",
    "lint-staged": "^15.5.1",

    "turbo": "^2.5.0",
    "typescript": "^5.8.3",
    "vitest": "^3.1.1"
  }
}
