{
  "name": "contexify",
  "version": "1.0.2",
  "description": "A TypeScript library providing a powerful dependency injection container with context-based IoC capabilities, inspired by LoopBack's Context system.",
  "author": "teomyth <teomyth@gmail.com>",
  "license": "MIT",
  "keywords": [
    "typescript",
    "dependency-injection",
    "ioc",
    "inversion-of-control",
    "context",
    "container",
    "binding",
    "decorator",
    "esm",
    "interceptor",
    "provider",
    "minimal-dependencies"
  ],
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./core": {
      "types": "./dist/core.d.ts",
      "default": "./dist/core.js"
    },
    "./decorators": {
      "types": "./dist/decorators.d.ts",
      "default": "./dist/decorators.js"
    },
    "./interceptors": {
      "types": "./dist/interceptors.d.ts",
      "default": "./dist/interceptors.js"
    }
  },
  "files": [
    "README.md",
    "NOTICE.md",
    "LICENSE",
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@10.8.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/teomyth/contexify.git"
  },
  "homepage": "https://github.com/teomyth/contexify",
  "bugs": {
    "url": "https://github.com/teomyth/contexify/issues"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "build": "tsc",
    "build:clean": "pnpm clean && pnpm build",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint .",
    "format": "prettier --write .",
    "prepare": "husky",
    "lint-staged": "lint-staged",
    "update-version": "node scripts/update-version.js",
    "release": "release-it",
    "release:patch": "release-it patch",
    "release:minor": "release-it minor",
    "release:major": "release-it major"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "metarize": "^1.0.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@eslint/js": "^9.24.0",
    "@release-it/conventional-changelog": "^10.0.0",
    "@types/node": "^22.14.1",
    "@vitest/coverage-v8": "^3.1.1",
    "conventional-changelog-angular": "^8.0.0",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.1",
    "prettier": "^3.5.3",
    "release-it": "^18.1.2",
    "turbo": "^2.5.0",
    "typescript": "^5.8.3",
    "vitest": "^3.1.1"
  }
}
