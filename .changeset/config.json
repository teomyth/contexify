{
  "$schema": "https://unpkg.com/@changesets/config@3.1.1/schema.json",
  "changelog": [
    "@changesets/changelog-github",
    { "repo": "teomyth/contexify" }
  ],
  "commit": true,
  "fixed": [],
  "linked": [],
  "access": "public",
  "baseBranch": "main",
  "updateInternalDependencies": "patch",
  "ignore": [
    "@contexify/examples-*",
    "@contexify/docs-*",
    "@contexify/docs-site",
    "@contexify/docs-code"
  ],
  "hooks": {
    "afterVersionChange": "cx-sync-versions"
  }
}
