{
  "name": "@contexify/build",
  "version": "0.2.0",
  "private": false,
  "description": "Build tools and utilities for Contexify projects",
  "type": "module",
  "main": "src/index.js",
  "exports": {
    ".": "./src/index.js",
    "./version": "./src/version/index.js",
    "./test": "./src/test/index.js",
    "./cli": "./src/cli/index.js"
  },
  "bin": {
    "contexify-build": "./bin/cli.js",
    "cx-build": "./bin/cli.js",
    "cx-sync-versions": "./bin/sync-versions.js",
    "cx-check-versions": "./bin/check-versions.js"
  },
  "files": [
    "bin",
    "src",
    "templates",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "build": "echo 'No build step required - using JavaScript directly'",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "biome check --write .",
    "format": "biome format --write .",
    "fix": "biome check --write . && biome format --write .",
    "prepub": "pnpm fix && pnpm test"
  },
  "keywords": [
    "contexify",
    "build",
    "tools",
    "typescript",
    "monorepo"
  ],
  "author": "teomyth <teomyth@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/teomyth/contexify.git",
    "directory": "packages/build"
  },
  "homepage": "https://github.com/teomyth/contexify",
  "bugs": {
    "url": "https://github.com/teomyth/contexify/issues"
  },
  "dependencies": {
    "chalk": "^5.4.1",
    "commander": "^13.1.0",
    "fast-glob": "^3.3.3",
    "replace-in-file": "^8.3.0"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^3.1.1",
    "vitest": "^3.1.1"
  },
  "engines": {
    "node": ">=18"
  }
}
