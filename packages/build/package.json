{
  "name": "@contexify/build",
  "version": "0.2.0",
  "description": "Build tools and utilities for Contexify projects",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./version": {
      "types": "./dist/version/index.d.ts",
      "default": "./dist/version/index.js"
    },
    "./test": {
      "types": "./dist/test/index.d.ts",
      "default": "./dist/test/index.js"
    },
    "./cli": {
      "types": "./dist/cli/index.d.ts",
      "default": "./dist/cli/index.js"
    }
  },
  "bin": {
    "contexify-build": "./bin/cli.js",
    "cx-build": "./bin/cli.js",
    "cx-sync-versions": "./bin/sync-versions.js",
    "cx-check-versions": "./bin/check-versions.js"
  },
  "files": ["bin", "dist", "templates", "README.md", "LICENSE"],
  "scripts": {
    "clean": "rm -rf dist",
    "build": "tsc",
    "build:clean": "pnpm clean && pnpm build",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "biome check --write .",
    "format": "biome format --write .",
    "fix": "biome check --write . && biome format --write .",
    "prepub": "pnpm clean && pnpm fix && pnpm build && pnpm test"
  },
  "keywords": ["contexify", "build", "tools", "typescript", "monorepo"],
  "author": "teomyth <teomyth@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/teomyth/contexify.git",
    "directory": "packages/build"
  },
  "homepage": "https://github.com/teomyth/contexify",
  "bugs": {
    "url": "https://github.com/teomyth/contexify/issues"
  },
  "dependencies": {
    "chalk": "^5.4.1",
    "commander": "^13.1.0",
    "fast-glob": "^3.3.3",
    "replace-in-file": "^8.3.0"
  },
  "devDependencies": {
    "@types/node": "^22.14.1",
    "@vitest/coverage-v8": "^3.1.1",
    "typescript": "^5.8.3",
    "vitest": "^3.1.1"
  },
  "engines": {
    "node": ">=18"
  }
}
